<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.sunmoon.shopface.employ.EmployMapper">
    <select id="selectAll" parameterType="employee" resultType="employee">
        SELECT E.NO AS NO, E.NAME AS , M.PHONE, M.EMAIL, E.STATE, E.BRANCH_NO, E.STATE
        FROM EMPLOY E LEFT OUTER JOIN MEMBER M
        ON E.MEMBER_ID = M.ID
        WHERE BRANCH_NO = #{branchNo}
        <where>
            <if test="state != null and state !=''">
                AND STATE = #{state}
            </if>
            <if test="name != null and name !=''">
                AND NAME = #{name}
            </if>
        </where>
    </select>
    <select id="select"></select>
    <insert id="insert"></insert>
    <update id="update"></update>
    <delete id="delete"></delete>
</mapper>