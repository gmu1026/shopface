<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.sunmoon.shopface.employ.EmployMapper">
    <select id="selectAll" parameterType="employ" resultMap="employResultMap">
        SELECT E.NO, E.NAME, E.BRANCH_NO, M.PHONE, M.EMAIL, DECODE(E.STATE, 'B', '합류전', 'C', '합류 완료', 'D', '비활성화') AS STATE, E.SALARY 
        FROM EMPLOY E LEFT OUTER JOIN MEMBER M
        ON E.MEMBER_ID = M.ID
        <where>
        <if test="branchNo != null and branchNo !=''">
               AND BRANCH_NO = #{branchNo}
            </if>
            <if test="state != null and state !=''">
                AND STATE = #{state}
            </if>
            <if test="name != null and name !=''">
                AND NAME = #{name}
            </if>
        </where>
    </select>
    
    <resultMap id="employResultMap" type="employ">
        <id column="NO" property="no"/>
        <result column="NAME" property="name"/>
        <result column="BRANCH_NO" property="branchNo"/>
        <result column="PHONE" property="phone"/>
        <result column="EMAIL" property="email"/>
        <result column="SALARY" property="salary"/>
        <result column="STATE" property="state"/>
    </resultMap>
   
    <select id="select" parameterType="employ" resultType="employ">
        SELECT E.NO, E.NAME, E.BRANCH_NO, M.PHONE, M.EMAIL, M.BANK_NAME, M.ACCOUNT_NUM 
               ,DECODE(E.STATE, 'B', '합류전', 'C', '합류완료', 'D', '비활성화') AS STATE, E.SALARY 
        FROM EMPLOY E JOIN MEMBER M
        ON E.MEMBER_ID = M.ID
        WHERE E.NO = #{no}
        <where>
	        <if test="cretiCode != null and cretiCode != ''">
	            AND CERTI_CODE = #{cretiCode}
	        </if>
        </where>
    </select>
    
    <insert id="insert"></insert>
    
    <update id="update" parameterType="employ">
        UPDATE EMPLOY 
        <set> 
            <if test="salary != null and salary != ''">
                SALARY = #{salary}, 
            </if>
            <if test="name != null and name != ''">
                NAME = #{name}, 
            </if>
            <if test="state != null ">
                STATE = #{state}, 
            </if>
        </set>
        WHERE NO = #{no}
    </update>
    
    <delete id="delete" parameterType="employ">
        DELETE FROM EMPLOY
        WHERE NO = #{no};
    </delete>
</mapper>