<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.ac.sunmoon.shopface.work.ScheduleMapper">




	<select id="select"
		parameterType="kr.ac.sunmoon.shopface.work.Schedule"
		resultType="kr.ac.sunmoon.shopface.work.Schedule">
		SELECT
		NO
		,TIMETABLE_NO
		,MEMBER_ID
		,STATE
		FROM SCHEDULE
		WHERE NO= #{no}
	</select>

	<select id="selectAll"
		parameterType="kr.ac.sunmoon.shopface.work.Schedule"
		resultType="kr.ac.sunmoon.shopface.work.Schedule">
		SELECT
		NO
		,TIMETABLE_NO
		,MEMBER_ID
		,STATE
		FROM SCHEDULE
	</select>
<!-- 
	<insert id="insert"
		parameterType="kr.ac.sunmoon.shopface.businessman.Businessman">
		INSERT INTO SCHEDULE
		VALUES
		(#{no},#{timetableNo},#{memberId},#{state})
	</insert>

-->
	<update id="update"
		parameterType="kr.ac.sunmoon.shopface.work.Schedule">
		UPDATE SCHEDULE
		<set>
			<if test="state != null">
				STATE = #{state}
			</if>
		</set>
		WHERE NO = #{no}
	</update>

	<delete id="delete"
		parameterType="kr.ac.sunmoon.shopface.work.Schedule">
		DELETE
		FROM SCHEDULE
		WHERE NO = #{no}
	</delete>


</mapper>