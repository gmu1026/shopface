<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.ac.sunmoon.shopface.work.ScheduleMapper">




	<select id="select"
		parameterType="schedule"
		resultType="schedule">
		SELECT
		NO
		,TIMETABLE_NO
		,MEMBER_ID
		,STATE
		FROM SCHEDULE
		WHERE NO= #{no}
	</select>

	<select id="selectAll"
		parameterType="schedule"
		resultType="schedule">
		SELECT
		NO
		,TIMETABLE_NO
		,MEMBER_ID
		,STATE
		FROM SCHEDULE
		
		<where>
				<if test = " no !=null and !no.equals('')"> AND NO = #{no}</if>
				<if test = "state !=null and !state.equals('')">AND STATE = #{state}</if>
		</where>
	</select>
<!-- 
	<insert id="insert"
		parameterType="kr.ac.sunmoon.shopface.businessman.Businessman">
		INSERT INTO SCHEDULE
		VALUES
		(#{no},#{timetableNo},#{memberId},#{state})
	</insert>

-->
	<update id="update"
		parameterType="schedule">
		UPDATE SCHEDULE
		<set>
			<if test="state != null"> STATE = #{state}, </if>
			<if test="timetableNo != null and timetableNo != ''">TIMETABLE_NO = #(timetableNo),</if>
		</set>
		WHERE NO = #{no}
	</update>

	<delete id="delete"
		parameterType="schedule">
		DELETE
		FROM SCHEDULE
		WHERE NO = #{no}
	</delete>


</mapper>